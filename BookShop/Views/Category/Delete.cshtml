@model Models.Entities.Category;
<h1>Delete</h1>


@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-trash"></i> Delete Category</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this category?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Category Name:</dt>
                <dd class="col-sm-9">@Model.CatName</dd>

                <dt class="col-sm-3">Category Order:</dt>
                <dd class="col-sm-9">@Model.CatOrder</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    @(Model.MarkedAsDeleted ? "Inactive" : "Active")
                </dd>
            </dl>
            <hr />
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
